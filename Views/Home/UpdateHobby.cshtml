
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Hobby</title>
</head>
<body>
    <h1>Edit @ViewBag.ChosenHobby.Name</h1>
     @model Hobby
     <form asp-action="update/@ViewBag.HobbyId"  method="post">
        <span asp-validation-for="Name"></span>
        <label asp-for="Name">Name:</label>
        <input type="text" asp-for="Name" placeholder=@ViewBag.ChosenHobby.Name>
        <br>
        <br>
    
        <span asp-validation-for="Description"></span>
        <label asp-for="Description">Description:</label>
        <input type="text" asp-for="Description" placeholder=@ViewBag.ChosenHobby.Description></input>
        <br>

        <button type="submit">Edit Hobby</button>

         </form>
</body>
</html>